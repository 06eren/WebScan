{
  "name": "webscan",
  "version": "1.0.5",
  "description": "Akıllı Web Tarama ve İzleme Uygulaması - Selenium ile çoklu site tarama",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.06eren.webscan",
    "productName": "WebScan",
    "copyright": "Copyright © 2026 Eren",
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "node_modules/selenium-webdriver/bin/**/*"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker",
      "icon": "Uygulamaİkon-Photoroom.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WebScan"
    },
    "files": [
      "**/*",
      "!data/*.db",
      "!.git/**/*",
      "!.gemini/**/*",
      "!dist/**/*",
      "!start.bat",
      "!check.js"
    ]
  },
  "keywords": [
    "electron",
    "selenium",
    "web-scraping",
    "price-comparison"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nedb-promises": "^6.2.3",
    "selenium-webdriver": "^4.16.0"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}